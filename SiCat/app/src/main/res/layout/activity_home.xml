<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:src="@drawable/background_atas_menu_home1"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="WELCOME, USER !"
            android:textSize="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Pilih Menu yang Tersedia"
            android:layout_marginBottom="25dp"
            android:textSize="17dp"
            />

        <Button
            android:id="@+id/link_daftar_menu"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_daftar_menu_fix"
            android:drawablePadding="50dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"
            android:text="Daftar Menu"
            android:gravity="left|center"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_daftar_bonus"
            android:text="Daftar Bonus"
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:drawableLeft="@drawable/ic_daftar_bonus_fix"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:gravity="left|center"
            android:drawablePadding="50dp"
            android:textSize="15sp"
            />

        <Button
            android:id="@+id/btn_prasmanan"
            android:text="Pemesanan Prasmanan"
            android:layout_gravity="center"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:drawableLeft="@drawable/ic_menu_prasmanan_fix"
            android:gravity="center_vertical|center"
            android:paddingLeft="43dp"
            android:paddingRight="43dp"
            android:textSize="15sp"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>